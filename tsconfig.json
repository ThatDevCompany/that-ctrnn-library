{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": false,
		"declaration": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"types": [
			"jasmine",
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts"
	]
}
