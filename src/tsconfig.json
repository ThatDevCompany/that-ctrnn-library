{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "./",
		"rootDir": "./",
		"target": "es6",
		"module": "commonjs",
		"inlineSourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"types": [
			"jasmine",
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.module.ts"
	]
}
